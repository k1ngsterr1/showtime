---
import styles from "./styles.module.scss";
import BigText from "@shared/ui/BigText/index.astro";
import Paragraph from "@shared/ui/Paragraph/index.astro";

interface Props {
  number: string;
  image: any;
  heading: string;
  paragraph: string;
  price: string;
}

const { number, image, heading, paragraph, price } = Astro.props;
---

<div class={styles.service_card}>
  <div class="flex flex-col space-between p-8">
    <div class="w-full flex items-center justify-between">
      <img src={image} alt={heading} class={styles.service_card__icon} />
      <span class={styles.service_card__number}>{number}</span>
    </div>
    <BigText text={heading} bigTextType="services--card" />
    <Paragraph
      text={paragraph}
      margin="mt-4"
      paragraphType="white"
      width="70%"
    />
    <span class={styles.service_card__price}>{price}</span>
  </div>
</div>
