---
import { Auth } from '@widgets/Form/Auth/index'
import { Cursor } from '@shared/ui/Cursor'
import { Loader } from '@shared/ui/Loader/index'

import Layout from '../layouts/Layout.astro'

import '@shared/styles/global.scss'
import '../pages/styles/registration/styles.scss'

import Logo from '@assets/logo/showtime_logo.svg'
---

<Layout
	image={Logo}
	title="Аутентификация"
	description="Аутентификация по фото - инновационное решение для обеспечения безопасности и удобства. Позвольте вашим пользователям войти в систему всего лишь с помощью фотографии. Наша передовая технология распознавания лиц гарантирует быструю и надежную идентификацию, не требуя дополнительных паролей или пин-кодов. Обеспечьте высокий уровень безопасности данных и комфортное пользование вашими сервисами. Попробуйте аутентификацию по фото уже сегодня и упростите процесс входа для ваших пользователей."
>
	<Cursor client:load />
	<Loader client:load />
	<Auth client:load />
</Layout>
