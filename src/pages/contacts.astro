---
import Layout from '../layouts/Layout.astro'

import { Cursor } from '@shared/ui/Cursor'
import { Loader } from '@shared/ui/Loader/index'
import { Header } from '@features/Header/index'
import { Menu } from '@features/Menu/index'
import { Form } from '@widgets/Screens/ContactForm/index'
import Footer from '@features/Footer/index.astro'

import styles from '@pages/styles/Contacts/styles.module.scss'
import '@shared/styles/global.scss'
---

<Layout title="Контакты">
	<Cursor client:load />
	<Loader client:load />
	<Menu client:load />
	<div class={styles.header} id="contacts">
		<Header client:load />
	</div>
	<Form client:load />
	<Footer to="contacts" />
</Layout>
