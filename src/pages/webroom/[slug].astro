---
import Layout from 'src/layouts/Layout.astro'
import { Cursor } from '@shared/ui/Cursor/index'
import VideoRoom from '@widgets/Screens/WebRoom'

export const prerender = false
const roomId = Astro.params.slug

import '@shared/styles/global.scss'
import '@shared/styles/scrollbar.scss'
---

<Layout title="Игра">
	<Cursor client:load />
	<!-- <Loader client:load /> -->
	<main class="h-full w-full bg-primary-dark">
		<VideoRoom client:only roomId={roomId} />
	</main>
</Layout>
