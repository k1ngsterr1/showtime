---
import { Cursor } from '@shared/ui/Cursor/index'
import { Header } from '@features/Header/index'
import { Loader } from '@shared/ui/Loader'
import { Menu } from '@features/Menu'

import Layout from '../layouts/Products.astro'
import ProductsPage from '@widgets/Screens/ProductsPage/Products/products.astro'
import { Form } from '@widgets/Screens/ContactForm/index'
import Footer from '@features/Footer/index.astro'

import styles from '@pages/styles/Products/styles.module.scss'
---

<Layout title="Online store">
	<Cursor client:load />
	<Loader client:load />
	<Menu client:load />
	<div class={styles.main} id="products">
		<Header client:load />
		<ProductsPage />
		<Form client:load />
		<Footer to="products" />
	</div>
</Layout>
