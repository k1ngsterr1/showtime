---
import { Header } from '@features/Header/index'
import { Cursor } from '@shared/ui/Cursor/index'
import { Loader } from '@shared/ui/Loader/index'
import { Menu } from '@features/Menu'
import { Form } from '@widgets/Screens/ContactForm/index'
import ServicesScreen from '@widgets/Screens/ServicesPage/Services/index.astro'
import Layout from '../layouts/Layout.astro'
import Footer from '@features/Footer/index.astro'

import '@shared/styles/global.scss'
import '@shared/styles/scrollbar.scss'

import styles from './styles/services/styles.module.scss'
---

<Layout title="Услуги">
	<Cursor client:load />
	<Loader client:load />
	<Menu client:load />
	<main class={styles.main} id="services">
		<Header client:load />
		<ServicesScreen />
	</main>
	<Form client:visible />
	<Footer to="services" />
</Layout>
