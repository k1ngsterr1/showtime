---
import Paragraph from '../../../shared/ui/Paragraph/index.astro'
import HistoryCard from '@entities/Card_Components/HistoryCard/index'
import SwiperHistory from '../../../shared/ui/HistoryCard/index'
import { history } from '@shared/lib/content/historyContent'

import '@shared/styles/global.scss'

import styles from '../ClientsPage/styles.module.scss'
---

<main class={styles.client}>
	<div class={styles.client__content}>
		<h1 class="mt-32 text-primary-red">История</h1>
		<Paragraph
			paragraphType="white"
			text="Lorem ipsum dolor  sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt  ut labore et dolore magna aliqua. "
			width="22%"
		/>
		<div class={styles.client__content__history_cards}>
			<SwiperHistory history={history} client:load />
		</div>
	</div>
</main>

<main class={styles.client_mob}>
	<div class={styles.client_mob__content}>
		<h1 class="mt-16 text-primary-red">История</h1>
		<div class="flex items-center justify-center">
			<Paragraph
				paragraphType="white"
				text="Lorem ipsum dolor  sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt  ut labore et dolore magna aliqua. "
				width="75%"
				align="center"
				margin="mt-4 mb-4"
			/>
		</div>
		<div class={styles.client_mob__cards}>
			{
				history.map((card) => (
					<HistoryCard name={card.name} data={card.data} paragraph={card.paragraph} />
				))
			}
		</div>
	</div>
</main>
