---
import styles from './styles.module.scss'
import TimetableCard from '@entities/Card_Components/TimetableCard/index.astro'
---

<section class={styles.timetable_screen} id="timetable">
	<div class={styles.timetable_screen__container}>
		<h5 class="m-auto text-primary-red">Расписание</h5>
		<div class="mt-16 flex items-center justify-evenly">
			<TimetableCard day="Вторник" place="Smart.point" price="15.000 тг" time="с 19:00 по 00:00" />
			<TimetableCard day="Среда" place="Smart.point" price="15.000 тг" time="с 19:00 по 00:00" />
			<TimetableCard day="Пятница" place="Smart.point" price="15.000 тг" time="с 19:00 по 00:00" />
			<TimetableCard day="Суббота" place="Smart.point" price="15.000 тг" time="с 19:00 по 00:00" />
		</div>
	</div>
</section>

<section class={styles.timetable_mob_screen} id="timetable">
	<div class={styles.timetable_mob_screen__container}>
		<h5 class="mt-8 text-center text-primary-red">Расписание</h5>
		<div class="mt-16 flex flex-col items-center">
			<TimetableCard day="Вторник" place="Smart.point" price="15.000 тг" time="с 19:00 по 00:00" />
		</div>
	</div>
</section>
