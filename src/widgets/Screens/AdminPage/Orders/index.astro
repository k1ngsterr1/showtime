---
import { AdminPanel } from '@features/AdminFeatures/AdminPanel/index'
import { adminpanel } from '@features/AdminFeatures/AdminPanel/index'
import AddButton from '@shared/ui/AddButton/index'
import AdminHeader from '@features/AdminFeatures/AdminHeader/index'
import { ServiceTable } from '@features/AdminFeatures/AdminTable'
import { services } from '@features/AdminFeatures/AdminTable/index'
import '@shared/styles/global.scss'

import styles from '../Team/styles.module.scss'

import Oleg from '@assets/Admin/oleg.webp'
---

<main class={styles.client}>
	<div class={styles.client__left}>
		<AdminPanel adminpanel={adminpanel} client:load />
	</div>
	<div class={styles.client__main}>
		<AdminHeader name="Bafomet Nurmukhamed" position="God" photo={Oleg} />
		<div class={styles.client__main__functional}>
			<div class={styles.client__main__functional__header}>
				<h1 class={styles.client__main__functional__header_heading}>Заказы</h1>
				<AddButton buttonType="filled" text="Добавить" />
			</div>
			<div class={styles.client__main__functional__orders}>
				<ServiceTable services={services} client:load />
			</div>
		</div>
	</div>
</main>
