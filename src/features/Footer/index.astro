---
import LinkText from '@shared/ui/LinkText'
import styles from './styles.module.scss'
import logoMob from '@assets/About/svg/logo-mob.svg'
import { LinkButton } from '@shared/ui/LinkButton/index'
import Logo from '@assets/logo/showtime_logo.svg'
import Spark from '@assets/Spark/spark.svg'

interface Props {
	to: string
}

const { to } = Astro.props
---

<footer class={styles.footer}>
	<div class={styles.footer__content}>
		<img src={Logo.src} alt="Logo" class={styles.footer__content__logo} />
		<nav class={styles.footer__content__navigation}>
			<LinkText text="Главная" to="main" href="" />
			<LinkText text="О нас" to="about" href="" />
			<LinkText text="Услуги" to="services" href="" />
			<LinkText text="Расписание" to="timetable" href="" />
			<LinkText text="Правила" to="rules" href="" />
			<LinkText text="Контакты" to="contacts" href="" />
		</nav>
		<LinkButton text="Вверх" buttonType="filled" to={to} client:visible />
	</div>
	<a href="tel:+77003333826" class={`${styles.footer__link}  hover:text-primary-light`}
		>+7 (700) 333-38-26</a
	>
	<a
		href="mailto:showtime@mafia.kz"
		class={`${styles.footer__link} mt-2 mb-4 transition-all hover:text-primary-light`}
		>showtime@mafia.kz</a
	>
	<a href="https://sparkstudio.kz/home" target="_blank">
		<img src={Spark.src} alt="Spark" class="mb-8 mt-8" />
	</a>
</footer>
<footer class={styles.footer_mob}>
	<div class="flex flex-col items-center">
		<img src={logoMob.src} alt="Logo" />
		<nav class="flex flex-col text-center">
			<LinkText text="Главная" to="" href="" />
			<LinkText text="О нас" to="" href="" />
			<LinkText text="Услуги" to="" href="" />
			<LinkText text="Расписание" to="" href="" />
			<LinkText text="Правила" to="" href="" />
			<LinkText text="Контакты" to="" href="" />
		</nav>
		<a href="tel:+77003333826" class={`${styles.link} mt-4 transition-all hover:text-primary-light`}
			>+7 (700) 333-38-26</a
		>
		<a
			href="mailto:showtime@mafia.kz"
			class={`${styles.link} mt-2 mb-4 transition-all hover:text-primary-light`}
			>showtime@mafia.kz</a
		>
		<LinkButton margin="mt-3 mb-8" text="Вверх" buttonType="filled" to="main" client:visible />
		<a href="https://sparkstudio.kz/home" target="_blank">
			<img src={Spark.src} alt="Spark" class="mb-8" />
		</a>
	</div>
</footer>
